<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterLoginActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRank" />

    <TextView
        android:id="@+id/txtUpcomingContests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Contests"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsername" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/textview_border"
        android:padding="2dp"
        android:text="Name"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtContestStart"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUpcomingContests" />

    <TextView
        android:id="@+id/txtContestSetAlarm"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/textview_border"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Set Alarm"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUpcomingContests" />

    <TextView
        android:id="@+id/txtContestRegister"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/textview_border"
        android:padding="2dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:text="Register"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtContestSetAlarm"
        app:layout_constraintTop_toBottomOf="@+id/txtUpcomingContests" />

    <TextView
        android:id="@+id/txtContestLength"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/textview_border"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Length"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtContestRegister"
        app:layout_constraintTop_toBottomOf="@+id/txtUpcomingContests" />

    <TextView
        android:id="@+id/txtContestStart"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/textview_border"
        android:padding="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Start"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtContestLength"
        app:layout_constraintTop_toBottomOf="@+id/txtUpcomingContests" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvUpcomingContests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContestLength" />


</androidx.constraintlayout.widget.ConstraintLayout>