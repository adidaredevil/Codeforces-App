<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtNewRating"
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:background="@drawable/textview_border"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="1449"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/txtPastContestName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtPastContestName"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtRatingChange"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="@drawable/textview_border"
            android:padding="2dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="+149"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtNewRating"
            app:layout_constraintTop_toTopOf="@id/txtPastContestName"
            app:layout_constraintBottom_toBottomOf="@id/txtPastContestName"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtSolved"
            android:layout_width="55dp"
            android:layout_height="0dp"
            android:background="@drawable/textview_border"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="6"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtRatingChange"
            app:layout_constraintTop_toTopOf="@id/txtPastContestName"
            app:layout_constraintBottom_toBottomOf="@id/txtPastContestName"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtContestRank"
            android:layout_width="45dp"
            android:layout_height="0dp"
            android:background="@drawable/textview_border"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="33000"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtSolved"
            app:layout_constraintTop_toTopOf="@id/txtPastContestName"
            app:layout_constraintBottom_toBottomOf="@id/txtPastContestName"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtPastContestName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:padding="2dp"
            android:text="Name"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtContestRank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>